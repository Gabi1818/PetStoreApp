<Window x:Class="PetStoreApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetStoreApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListView ItemsSource="{Binding ZboziList}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" />
                    <GridViewColumn Header="Kategorie" DisplayMemberBinding="{Binding Kategorie}" />
                    <GridViewColumn Header="Množství na skladě" DisplayMemberBinding="{Binding MnozstviNaSklade}" />
                    <GridViewColumn Header="Cena" DisplayMemberBinding="{Binding Cena}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
