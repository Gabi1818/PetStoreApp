<Window x:Class="PetStoreApp.Views.ServiceManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetStoreApp.Views"
        mc:Ignorable="d"
        Title="ServiceManagementWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Přidat novou službu" FontSize="16" Margin="10"/>

            <TextBox x:Name="ServiceCategory" Text="Kategorie služby" Margin="10"/>
            <TextBox x:Name="ServicePrice" Text="Cena služby" Margin="10"/>
            <DatePicker x:Name="ServiceDate" Margin="10"/>

            <Button Content="Přidat službu" Width="200" Click="AddService" Margin="10"/>

            <ListBox x:Name="ServiceList" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
