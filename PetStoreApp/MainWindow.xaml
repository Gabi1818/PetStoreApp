<Window x:Class="PetStoreApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetStoreApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Správa zákazníků" Width="200" Height="40" Click="OpenCustomerManagement"/>
            <Button Content="Správa zboží" Width="200" Height="40" Click="OpenProductManagement"/>
            <Button Content="Správa služeb" Width="200" Height="40" Click="OpenServiceManagement"/>
            <Button Content="Správa rezervací" Width="200" Height="40" Click="OpenReservationManagement"/>
        </StackPanel>
    </Grid>
</Window>
